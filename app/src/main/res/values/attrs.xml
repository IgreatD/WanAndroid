<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ElasticDragDismissFrameLayout">
        <attr name="dragDismissDistance" format="dimension" />
        <attr name="dragDismissFraction" format="float" />
        <attr name="dragDismissScale" format="float" />
        <attr name="dragElasticity" format="float" />
    </declare-styleable>

    <declare-styleable name="InkPageIndicator">
        <attr name="dotDiameter" format="dimension" />
        <attr name="dotGap" format="dimension" />
        <attr name="animationDuration" format="integer" />
        <attr name="pageIndicatorColor" format="color" />
        <attr name="currentPageIndicatorColor" format="color" />
    </declare-styleable>

    <declare-styleable name="StartAnimatable">
        <attr name="android:src" />
    </declare-styleable>

    <declare-styleable name="CircularReveal">
        <attr name="startRadius" format="dimension" />
        <attr name="endRadius" format="dimension" />
        <attr name="centerOn" format="reference" />
    </declare-styleable>

    <attr name="textfont" format="string" />

    <declare-styleable name="FontTextAppearance">
        <attr name="android:textSize" />
        <attr name="android:textColor" />
        <attr name="android:fontFamily" />
        <attr name="textfont" />
    </declare-styleable>

    <declare-styleable name="FontTextView">
        <attr name="textfont" />
        <attr name="android:textAppearance" />
    </declare-styleable>


    <declare-styleable name="BaselineGridTextView">
        <attr name="lineHeightMultiplierHint" format="float" />
        <attr name="lineHeightHint" format="dimension" />
        <attr name="maxLinesByHeight" format="boolean" />
    </declare-styleable>
</resources>