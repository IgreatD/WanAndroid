<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.sjkj.wanandroid.ui.widght.BaselineGridTextView
        android:id="@+id/hotItemTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/hot_tag_bg"
        android:paddingBottom="@dimen/dp_10"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="@dimen/dp_10"
        android:textColor="@color/qmui_config_color_60_pure_black"
        android:textSize="@dimen/sp_16"
        tools:text="hothothot" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/hotItemRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hotItemTag"
        tools:listitem="@layout/adapter_hot_list" />
</RelativeLayout>
